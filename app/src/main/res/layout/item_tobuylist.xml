<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.zizohanto.android.tobuy.ui.tobuylist.TobuyListItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBg"
            app:cardCornerRadius="16dp"
            app:elevation="8dp"
            app:strokeColor="@color/colorBg"
            app:strokeWidth="2dp"
            tools:targetApi="lollipop">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/list_item_padding"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:onClick="@{() -> viewmodel.tobuyListClicked()}"
                android:orientation="vertical"
                android:padding="@dimen/list_item_padding">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{viewmodel.nameForList}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="28sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/tobuy_list_name" />

                <TextView
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorSomePinkLight"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{viewmodel.store}"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/price_label"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    android:layout_marginEnd="24dp"
                    tools:text="@string/store" />

                <TextView
                    android:id="@+id/price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorBlueLight"
                    android:padding="8dp"
                    android:text="@string/price"
                    android:textStyle="bold"
                    app:layout_constraintRight_toLeftOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorBlueLight"
                    android:padding="8dp"
                    android:text="@{String.valueOf(viewmodel.totalCost)}"
                    app:layout_constraintBaseline_toBaselineOf="@+id/price_label"
                    app:layout_constraintRight_toLeftOf="@id/vertical_guideline"
                    android:layout_marginEnd="24dp"
                    tools:text="@string/tobuy_list_price_text" />

                <View
                    android:id="@+id/vertical_guideline"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/budget_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorYellowLight"
                    android:padding="8dp"
                    android:text="@string/budget_label"
                    app:layout_constraintLeft_toRightOf="@id/vertical_guideline"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

                <TextView
                    android:id="@+id/budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellowLight"
                    android:padding="8dp"
                    android:text="@{String.valueOf(viewmodel.budget)}"
                    app:layout_constraintBaseline_toBaselineOf="@+id/budget_label"
                    app:layout_constraintLeft_toRightOf="@id/budget_label"
                    tools:text="@string/budget_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>