<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="@color/colorBg"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="28sp"
        tools:text="@string/tobuy_list_name" />

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="@color/colorBlueLight"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/price"
        android:layout_alignParentStart="true"
        android:paddingStart="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/price_label"
        android:background="@color/colorBlueLight"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/price_label"
        tools:text="@string/tobuy_list_price_text" />

    <TextView
        android:id="@+id/budget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toLeftOf="@id/budget"
        android:layout_marginTop="8dp"
        android:background="@color/colorYellowLight"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_toStartOf="@id/budget"
        android:paddingStart="8dp"
        android:text="@string/budget_label" />

    <TextView
        android:id="@+id/budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:background="@color/colorYellowLight"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        tools:text="2000" />

    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_label"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        tools:text="Lidl" />

</RelativeLayout>